<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@mipmap/titlebar_bg"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_sousuo_item_back"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/abc_ic_ab_back"/>

        <EditText
            android:id="@+id/et_sousuo_context"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:textSize="15sp"
            android:singleLine="true"
            android:focusable="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#ffffff"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/ib_sousuo_item_do"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/abc_ic_search_api_mtrl_alpha"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_sousuomain_load"
        android:layout_width="120dp"
        android:clickable="true"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:visibility="gone"
        android:src="@mipmap/icon_content_refresh_change"/>

    <ListView
        android:id="@+id/lv_sousuo_jieguo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </ListView>

    <ImageView
        android:id="@+id/iv_sousuo_no"
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:layout_height="155dp"
        android:visibility="gone"
        android:src="@mipmap/icon_search_no_data"/>

    <LinearLayout
        android:id="@+id/ll_sousuo_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="未找到与“"/>
        <TextView
            android:id="@+id/tv_sousuo_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#84d018"
            android:text="阿大声道"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="”相关的漫画"/>

    </LinearLayout>

</LinearLayout>