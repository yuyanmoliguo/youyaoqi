<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@mipmap/titlebar_bg"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_gengxin_item_back"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/abc_ic_ab_back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="漫画介绍"/>

        <ImageButton
            android:id="@+id/ib_gengxin_item_download"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:background="@mipmap/abc_ic_menu_copy_mtrl_am_alpha"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_gengxinitem_load"
        android:layout_width="120dp"
        android:clickable="true"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:visibility="gone"
        android:src="@mipmap/icon_content_refresh_change"/>

    <ListView
        android:id="@+id/lv_gengxin_item_mulu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>