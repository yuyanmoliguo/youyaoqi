<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@mipmap/titlebar_bg"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_shoucang_top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_shoucang_shoucang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textColor="#ffffff"
                android:gravity="center|bottom"
                android:textSize="16sp"
                android:text="收藏"/>
            <RadioButton
                android:id="@+id/rb_shoucang_lishi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textColor="#ffffff"
                android:gravity="center|bottom"
                android:textSize="16sp"
                android:text="历史"/>
            <RadioButton
                android:id="@+id/rb_shoucang_bendi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textColor="#ffffff"
                android:gravity="center|bottom"
                android:textSize="16sp"
                android:text="本地"/>

            <ImageButton
                android:id="@+id/ib_shoucang_null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:paddingLeft="40dp"
                android:layout_marginTop="15dp"
                android:visibility="visible"/>

            <ImageButton
                android:id="@+id/ib_shoucang_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:paddingLeft="40dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:src="@mipmap/icon_record_clear"/>

            <ImageButton
                android:id="@+id/ib_shoucang_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:background="#00ffffff"
                android:visibility="gone"
                android:src="@mipmap/icon_loacl_import"/>

            <ImageButton
                android:id="@+id/ib_shoucang_f5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:background="#00ffffff"
                android:visibility="visible"
                android:src="@mipmap/icon_record_sync"/>

        </RadioGroup>

        <ImageView
            android:id="@+id/iv_shoucang_top_yuan"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/abc_btn_switch_to_on_mtrl_000019"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_shoucang"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>