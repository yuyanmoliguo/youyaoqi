<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@mipmap/titlebar_bg"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_faxian_top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_faxian_zhuanti"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textColor="#ffffff"
                android:gravity="center|bottom"
                android:textSize="16sp"
                android:text="专题"/>
            <RadioButton
                android:id="@+id/rb_faxian_youxi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textColor="#ffffff"
                android:gravity="center|bottom"
                android:textSize="16sp"
                android:text="游戏"/>

        </RadioGroup>

        <ImageView
            android:id="@+id/iv_faxian_top_yuan"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/abc_btn_switch_to_on_mtrl_000019"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_faxian"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>